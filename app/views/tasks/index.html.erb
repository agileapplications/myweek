<main class="min-h-screen bg-slate-50 text-slate-900 dark:bg-slate-950 dark:text-slate-100 flex flex-col">
  <div class="w-full px-6 py-10 flex-1 flex flex-col"
    data-controller="tasks-board"
    data-action="keydown@window->tasks-board#keyDown">
    <header class="mb-6 flex items-center justify-between">
      <h1 class="text-3xl font-semibold tracking-tight">This Week</h1>
    </header>

    <section class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4 xl:grid-cols-7 flex-1">
      <% @week_days.each do |day| %>
        <% weekend = day[:key] == "weekend" %>
        <% next_week = day[:key] == "next_week" %>
        <div class="rounded-xl border border-slate-200 p-4 shadow-sm flex flex-col 
          <%= weekend ? "bg-slate-100 text-slate-700" : "bg-white" %>
          <%= next_week ? "bg-slate-100/80 text-slate-700" : "" %>
          <%= weekend ? "dark:bg-slate-900/60" : "" %>
          <%= next_week ? "dark:bg-slate-900/30" : "" %>"
          data-planned="<%= day[:key] %>"
          data-action="dragover->tasks-board#allowDropWeek dragenter->tasks-board#dragEnterWeek dragleave->tasks-board#dragLeaveWeek drop->tasks-board#dropOnDay">
          <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-600 dark:text-slate-300 <%= weekend ? "text-slate-500" : "" %> <%= next_week ? "text-slate-400" : "" %>"><%= day[:label] %></h2>
          <div class="mt-3 flex-1 space-y-2 overflow-y-auto" data-tasks-board-target="weekCards">
            <div class="hidden rounded-lg border border-dashed border-emerald-200 bg-emerald-50 px-3 py-2 text-sm text-emerald-500 dark:border-emerald-700/60 dark:bg-emerald-950/50 dark:text-emerald-300"
              data-tasks-board-target="placeholder">
              Drop task here
            </div>
            <% (@planned_by_day[day[:key]] || []).each do |task| %>
              <% sub_total = task.sub_tasks.size %>
              <% sub_done = task.sub_tasks.count(&:completed) %>
              <% sub_progress = sub_total.zero? ? 0 : ((sub_done.to_f / sub_total) * 100).round %>
              <% ring_class = sub_total.zero? ? "hidden" : (sub_done == sub_total ? "subtask-ring--complete" : "subtask-ring--progress") %>
              <div class="rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm text-slate-700 shadow-sm cursor-grab active:cursor-grabbing transition hover:-translate-y-0.5 hover:border-slate-300 hover:shadow dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:hover:border-slate-500 <%= task.big? ? "task-card--big" : "" %>"
                draggable="true"
                data-card-type="planned"
                data-task-id="<%= task.id %>"
                data-task-list-id="<%= task.task_list_id %>"
                data-task-title="<%= task.title %>"
                data-task-description="<%= task.description.to_s %>"
                data-task-big="<%= task.big? %>"
                data-task-planned="<%= task.planned.to_s %>"
                data-subtask-total="<%= sub_total %>"
                data-subtask-done="<%= sub_done %>"
                data-sub-tasks="<%= ERB::Util.html_escape(task.sub_tasks.map { |sub| { id: sub.id, title: sub.title, completed: sub.completed } }.to_json) %>"
                data-action="dragstart->tasks-board#dragStart dragend->tasks-board#dragEnd mouseenter->tasks-board#hoverCard mouseleave->tasks-board#leaveCard click->tasks-board#openEditFromClick contextmenu->tasks-board#openContextMenu">
                <div class="flex items-center justify-between gap-2">
                  <span class="task-title <%= task.big? ? "task-title--big" : "" %>"><%= task.title %></span>
                  <div class="flex items-center gap-2">
                    <span class="subtask-ring <%= ring_class %>" style="--progress: <%= sub_progress %>%"></span>
                    <% if task.description.present? %>
                      <span class="text-slate-400 dark:text-slate-500" aria-label="Has description">
                        <svg viewBox="0 0 20 20" class="h-4 w-4" fill="currentColor" aria-hidden="true">
                          <path d="M6 4h8a2 2 0 0 1 2 2v6a2 2 0 0 1-2 2H9.414L6 17.414V4z" />
                        </svg>
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </section>

    <details class="group mt-6 rounded-2xl border border-slate-200 bg-white shadow-sm dark:border-slate-800 dark:bg-slate-900">
      <summary class="flex cursor-pointer items-center justify-between px-5 py-4">
        <span class="text-sm font-semibold uppercase tracking-wide text-slate-600 dark:text-slate-300">Backlog</span>
        <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600 dark:bg-slate-800 dark:text-slate-300"><%= @backlog_task_count %></span>
      </summary>
      <div class="px-5 pb-5">
        <div class="h-0 overflow-hidden transition-all duration-300 group-open:h-[40vh]">
          <div class="h-full overflow-x-auto">
            <div class="flex h-full min-w-max gap-4 pr-4">
              <% @task_lists.each do |list| %>
                <div class="w-56 flex-shrink-0 rounded-xl border border-slate-200 bg-slate-50 p-4 flex flex-col dark:border-slate-800 dark:bg-slate-950"
                  data-task-list-id="<%= list.id %>"
                  data-action="dragover->tasks-board#allowDrop drop->tasks-board#drop dragenter->tasks-board#dragEnter dragleave->tasks-board#dragLeave">
                  <div class="flex items-start justify-between gap-2">
                    <div>
                      <h3 class="text-sm font-semibold text-slate-700 dark:text-slate-200"><%= list.name %></h3>
                      <p class="mt-1 text-xs text-slate-500"
                        data-task-count="<%= list.tasks.size %>"
                        data-tasks-board-target="count">
                        <%= pluralize(list.tasks.size, "task") %>
                      </p>
                    </div>
                    <button type="button"
                      class="rounded-md border border-slate-200 bg-white px-2 py-1 text-xs font-semibold text-slate-600 hover:bg-slate-100 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-200 dark:hover:bg-slate-800"
                      data-task-list-id="<%= list.id %>"
                      data-action="click->tasks-board#openNew">
                      +
                    </button>
                  </div>
                  <div class="mt-3 flex-1 space-y-2 overflow-y-auto" data-tasks-board-target="cards">
                    <div class="hidden rounded-lg border border-dashed border-slate-300 bg-white/70 px-3 py-2 text-sm text-slate-400 dark:border-slate-700 dark:bg-slate-900/70 dark:text-slate-500"
                      data-tasks-board-target="placeholder">
                      Drop task here
                    </div>
                    <% list.tasks.each do |task| %>
                      <% sub_total = task.sub_tasks.size %>
                      <% sub_done = task.sub_tasks.count(&:completed) %>
                      <% sub_progress = sub_total.zero? ? 0 : ((sub_done.to_f / sub_total) * 100).round %>
                      <% ring_class = sub_total.zero? ? "hidden" : (sub_done == sub_total ? "subtask-ring--complete" : "subtask-ring--progress") %>
                      <div class="rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm text-slate-700 shadow-sm cursor-grab active:cursor-grabbing transition hover:-translate-y-0.5 hover:border-slate-300 hover:shadow dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:hover:border-slate-500 <%= task.big? ? "task-card--big" : "" %> <%= task.planned.present? ? "!bg-emerald-50 !border-emerald-200 hover:!border-emerald-300 dark:!bg-emerald-950/60 dark:!border-emerald-700/60 dark:hover:!border-emerald-500" : "" %>"
                        draggable="true"
                        data-card-type="backlog"
                        data-task-id="<%= task.id %>"
                        data-task-list-id="<%= list.id %>"
                        data-task-title="<%= task.title %>"
                        data-task-description="<%= task.description.to_s %>"
                        data-task-big="<%= task.big? %>"
                        data-task-planned="<%= task.planned.to_s %>"
                        data-subtask-total="<%= sub_total %>"
                        data-subtask-done="<%= sub_done %>"
                        data-sub-tasks="<%= ERB::Util.html_escape(task.sub_tasks.map { |sub| { id: sub.id, title: sub.title, completed: sub.completed } }.to_json) %>"
                        data-action="dragstart->tasks-board#dragStart dragend->tasks-board#dragEnd mouseenter->tasks-board#hoverCard mouseleave->tasks-board#leaveCard click->tasks-board#openEditFromClick contextmenu->tasks-board#openContextMenu">
                        <div class="flex items-center justify-between gap-2">
                          <span class="task-title <%= task.big? ? "task-title--big" : "" %>"><%= task.title %></span>
                          <div class="flex items-center gap-2">
                            <span class="subtask-ring <%= ring_class %>" style="--progress: <%= sub_progress %>%"></span>
                            <% if task.description.present? %>
                              <span class="<%= task.planned.present? ? "text-emerald-400" : "text-slate-400 dark:text-slate-500" %>" aria-label="Has description">
                                <svg viewBox="0 0 20 20" class="h-4 w-4" fill="currentColor" aria-hidden="true">
                                  <path d="M6 4h8a2 2 0 0 1 2 2v6a2 2 0 0 1-2 2H9.414L6 17.414V4z" />
                                </svg>
                              </span>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    </details>

    <div class="fixed inset-0 z-50 hidden items-center justify-center bg-slate-900/40 p-4"
      data-tasks-board-target="modal">
      <div class="w-full max-w-md rounded-2xl bg-white p-6 shadow-xl dark:bg-slate-900">
        <div class="flex items-start justify-between">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-slate-100" data-tasks-board-target="modalTitle">New Task</h2>
          <button type="button" class="text-slate-400 hover:text-slate-600 dark:hover:text-slate-200" data-action="click->tasks-board#closeModal">
            <span class="sr-only">Close</span>
            âœ•
          </button>
        </div>
        <form class="mt-4 space-y-4" data-action="submit->tasks-board#submitForm">
          <div>
            <label class="text-sm font-medium text-slate-700 dark:text-slate-200" for="task-title">Title</label>
            <input id="task-title" name="title" required
              class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm text-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-400 dark:border-slate-700 dark:bg-slate-950 dark:text-slate-100"
              data-tasks-board-target="titleInput" />
          </div>
          <div>
            <label class="text-sm font-medium text-slate-700 dark:text-slate-200" for="task-description">Description (optional)</label>
            <textarea id="task-description" name="description" rows="4"
              class="mt-2 w-full resize-none rounded-lg border border-slate-200 px-3 py-2 text-sm text-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-400 dark:border-slate-700 dark:bg-slate-950 dark:text-slate-100"
              data-tasks-board-target="descriptionInput"></textarea>
          </div>
          <div>
            <div class="flex items-center justify-between">
              <label class="text-sm font-medium text-slate-700 dark:text-slate-200">Subtasks</label>
              <button type="button"
                class="text-xs font-semibold text-slate-600 hover:text-slate-900 dark:text-slate-300 dark:hover:text-white"
                data-action="click->tasks-board#addSubTask">
                Add
              </button>
            </div>
            <div class="mt-2 space-y-2" data-tasks-board-target="subTaskList"></div>
            <div class="mt-2 flex items-center gap-2">
              <input type="text"
                class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm text-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-400 dark:border-slate-700 dark:bg-slate-950 dark:text-slate-100"
                placeholder="New subtask"
                data-tasks-board-target="subTaskInput" />
            </div>
            <p class="mt-1 text-xs text-slate-500 dark:text-slate-400 hidden" data-tasks-board-target="subTaskHint">
              Save the task before adding subtasks.
            </p>
          </div>
          <label class="flex items-center gap-2 text-sm text-slate-700 dark:text-slate-200">
            <input type="checkbox"
              class="h-4 w-4 rounded border-slate-300 text-slate-900 focus:ring-slate-400 dark:border-slate-600 dark:bg-slate-950"
              data-tasks-board-target="bigCheckbox" />
            Big task (double height)
          </label>
          <p class="hidden text-sm text-rose-600" data-tasks-board-target="error">Title is required.</p>
          <div class="flex items-center justify-end gap-3">
            <button type="button"
              class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-600 hover:bg-slate-100 dark:border-slate-700 dark:text-slate-200 dark:hover:bg-slate-800"
              data-action="click->tasks-board#closeModal">
              Cancel
            </button>
            <button type="submit"
              class="rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800 dark:bg-slate-100 dark:text-slate-900 dark:hover:bg-white"
              data-tasks-board-target="submitButton">
              Save
            </button>
          </div>
        </form>
      </div>
    </div>

    <div class="fixed z-50 hidden w-40 rounded-lg border border-slate-200 bg-white py-1 text-sm shadow-lg dark:border-slate-700 dark:bg-slate-900"
      data-tasks-board-target="contextMenu">
      <button type="button"
        class="w-full px-3 py-2 text-left text-slate-700 hover:bg-slate-100 dark:text-slate-200 dark:hover:bg-slate-800"
        data-action="click->tasks-board#contextEdit">
        Edit
      </button>
      <button type="button"
        class="w-full px-3 py-2 text-left text-slate-700 hover:bg-slate-100 dark:text-slate-200 dark:hover:bg-slate-800"
        data-tasks-board-target="contextUnplan"
        data-action="click->tasks-board#contextUnplan">
        Unplan
      </button>
      <button type="button"
        class="w-full px-3 py-2 text-left text-slate-700 hover:bg-slate-100 dark:text-slate-200 dark:hover:bg-slate-800"
        data-action="click->tasks-board#contextArchive">
        Archive
      </button>
    </div>
  </div>
</main>
