<main class="min-h-screen bg-slate-50 text-slate-900 flex flex-col">
  <div class="mx-auto max-w-7xl px-6 py-10 flex-1 w-full flex flex-col">
    <header class="mb-6">
      <h1 class="text-3xl font-semibold tracking-tight">This Week</h1>
    </header>

    <section class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4 xl:grid-cols-8 flex-1">
      <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm flex flex-col">
        <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-600">Mon</h2>
        <div class="mt-3 flex-1 rounded-lg border border-dashed border-slate-200 bg-slate-50"></div>
      </div>
      <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm flex flex-col">
        <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-600">Tue</h2>
        <div class="mt-3 flex-1 rounded-lg border border-dashed border-slate-200 bg-slate-50"></div>
      </div>
      <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm flex flex-col">
        <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-600">Wed</h2>
        <div class="mt-3 flex-1 rounded-lg border border-dashed border-slate-200 bg-slate-50"></div>
      </div>
      <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm flex flex-col">
        <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-600">Thu</h2>
        <div class="mt-3 flex-1 rounded-lg border border-dashed border-slate-200 bg-slate-50"></div>
      </div>
      <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm flex flex-col">
        <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-600">Fri</h2>
        <div class="mt-3 flex-1 rounded-lg border border-dashed border-slate-200 bg-slate-50"></div>
      </div>
      <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm flex flex-col">
        <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-600">Sat</h2>
        <div class="mt-3 flex-1 rounded-lg border border-dashed border-slate-200 bg-slate-50"></div>
      </div>
      <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm flex flex-col">
        <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-600">Sun</h2>
        <div class="mt-3 flex-1 rounded-lg border border-dashed border-slate-200 bg-slate-50"></div>
      </div>
      <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm flex flex-col">
        <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-600">Next Week</h2>
        <div class="mt-3 flex-1 rounded-lg border border-dashed border-slate-200 bg-slate-50"></div>
      </div>
    </section>

    <details class="group mt-6 rounded-2xl border border-slate-200 bg-white shadow-sm">
      <summary class="flex cursor-pointer items-center justify-between px-5 py-4">
        <span class="text-sm font-semibold uppercase tracking-wide text-slate-600">Backlog</span>
        <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600"><%= @backlog_task_count %></span>
      </summary>
      <div class="px-5 pb-5">
        <div class="h-0 overflow-hidden transition-all duration-300 group-open:h-[50vh]">
          <div class="h-full overflow-x-auto">
            <div class="flex h-full min-w-max gap-4 pr-4">
              <% @task_lists.each do |list| %>
                <div class="w-56 flex-shrink-0 rounded-xl border border-slate-200 bg-slate-50 p-4">
                  <h3 class="text-sm font-semibold text-slate-700"><%= list.name %></h3>
                  <p class="mt-1 text-xs text-slate-500"><%= pluralize(list.tasks.size, "task") %></p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </details>
  </div>
</main>
